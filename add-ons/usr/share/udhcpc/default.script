#!/bin/sh
[ -z "$interface" ] && exit 1
case "$1" in
  deconfig)
    ifconfig $interface 0.0.0.0
    ;;
  renew|bound)
    ifconfig $interface $ip netmask $subnet
    [ -n "$router" ] && route add default gw $router dev $interface

    # 设置 DNS
    echo -n > /etc/resolv.conf
    for dns in $dns; do
      echo "nameserver $dns" >> /etc/resolv.conf
    done
    ;;
esac

exit 0

